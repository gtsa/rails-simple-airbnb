<div class="p-2 px-5 mb-2 bg-light border-bottom">
  <div class= "d-flex align-items-center justify-content-between">
    <%= link_to "Simple Airbnb", flats_path, class:"btn btn-lg"%>
    <%= link_to "Add Flat", new_flat_path, class:"btn btn-outline-primary"%>
  </div>
</div>
<div class="container pt-4">
  <h1>All our flats (<%=@flats.length%>)</h1>
  <div class = "d-flex flex-wrap">
    <% @flats.each do|flat| %>
      <div class="card m-3 shadow" style="width: 18rem;">
        <img src="<%= flat.image_url %>" class="card-img-top" style = "height:180px; object-fit: cover;">
        <div class="card-header">
          <h4 class="card-title"><%= flat.name %></h4>
          <p class="card-text"><%= flat.address %></p>
          <div>
            <i class="fa-solid fa-user-group"> <%= flat.number_of_guests %></i>
            &nbsp&nbsp&nbsp
            <i class="fa-solid fa-euro-sign"> <%= flat.price_per_night %></i>
          </div>
        </div>
        <div class="card-body d-flex align-items-center justify-content-start" style = "text-shadow: 1px 1px 1px #dadada;">
          <%= link_to "More Info", flat_path(flat), class:"link-primary text-decoration-none px-2"%>
          <%= link_to "Edit", edit_flat_path(flat), class:"link-warning text-decoration-none px-2"%>
          <%= link_to "Delete", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
          class:"link-danger text-decoration-none px-2"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
